<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:background="@drawable/background">

	<ImageView
	    android:id="@+id/ImageView01"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:background="@drawable/logo_patch" >

</ImageView>

	<LinearLayout android:id="@+id/LinearLayout03"
		android:layout_marginTop="8dip" android:layout_marginLeft="7dip"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<ImageView android:id="@+id/StartNewTripProileImageView"
			android:background="@drawable/homescreen_user_imageborder"
			android:src="@drawable/profile_pic" android:layout_width="105dip"
			android:layout_height="115dip" android:scaleType="centerCrop"></ImageView>
		
		<LinearLayout android:id="@+id/LinearLayout03"
			android:orientation="vertical" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginLeft="5dip">
			<TextView android:text="aaa aa" android:id="@+id/HomeScreenUserName"
				android:textColor="#000" android:textSize="18dip"
				android:layout_width="fill_parent" android:layout_height="wrap_content"></TextView>
			
			<!--
			<TextView android:text="Level " android:id="@+id/HomeScreenUserLevel"
				android:textColor="#000" android:textSize="12dip"
				android:layout_width="fill_parent" android:layout_height="wrap_content"></TextView>

			-->
			<LinearLayout android:id="@+id/LinearLayout04"
				android:layout_marginTop="6dip" android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<LinearLayout android:id="@+id/LinearLayout04"
					android:gravity="center" android:orientation="vertical"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:background="@drawable/white_background_small_box">
					
					<TextView android:text="31" android:paddingLeft="5dip"
						android:paddingRight="5dip" android:textSize="21dip"
						android:textStyle="bold" android:textColor="#000"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:id="@+id/StartNewTripTripsTextView"></TextView>
					<TextView android:text="Trips"
						android:textColor="#000" android:textSize="10dip"
						android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
				</LinearLayout>
				<LinearLayout android:id="@+id/HomeScreenGradeLinearLayout"
					android:gravity="center" android:orientation="vertical"
					android:layout_width="wrap_content" android:layout_marginLeft="4dip"
					android:layout_height="wrap_content" android:background="@drawable/white_background_small_box">
					
					<TextView android:text="100%" android:paddingLeft="3dip"
						android:paddingRight="3dip" android:textSize="21dip"
						android:textStyle="bold" android:textColor="#000"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:id="@+id/StartNewTripGradeTextView"></TextView>
					<TextView android:text="Grade"
						android:textColor="#000" android:textSize="10dip"
						android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
				</LinearLayout>
				<LinearLayout android:id="@+id/LinearLayout04"
					android:gravity="center" android:orientation="vertical"
					android:layout_width="wrap_content" android:layout_marginLeft="3dip"
					android:layout_height="wrap_content" android:background="@drawable/white_background_large_box">
					<TextView android:text="499" android:textSize="21dip"
						android:textStyle="bold" android:textColor="#000"
						android:gravity="center"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:id="@+id/StartNewTripTotalMilesTextView"></TextView>
					<TextView android:text="Total Safe Miles"
						android:textColor="#000" android:textSize="10dip"
						android:paddingLeft="2dip" android:paddingRight="2dip"
						android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>

				</LinearLayout>
			</LinearLayout>
		
</LinearLayout>
	</LinearLayout>


<!-- 	<Button android:text="Start New Trip" android:id="@+id/StartNewTripLayout_StartNewButton"
		android:layout_gravity="center" android:layout_width="250dip"
		android:layout_margin="8dip" android:layout_height="wrap_content"
		></Button>
 -->		

	<TextView
	    android:id="@+id/TextView01"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/header_background"
	    android:gravity="left|center_vertical"
	    android:paddingLeft="5dip"
	    android:text="Recent Trip Log"
	    android:textColor="#fff"
	    android:textStyle="bold" >
</TextView>
<AbsoluteLayout android:id="@+id/AbsoluteLayout01" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:layout_weight="1"
	>
	<LinearLayout android:layout_width="fill_parent"
	android:layout_height="25dip"
	android:background="#fff" 
	android:gravity = "center_horizontal"
	>
	<TextView android:text="You have no trips saved" 
		
		android:textColor="#000"
		android:textStyle="bold" 
		android:paddingLeft="20dip" 
		android:paddingRight="20dip"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:id="@+id/noTripsSavedTextView"
		></TextView>
	
	</LinearLayout>	
	
	
<ListView android:id="@android:id/list" android:layout_width="fill_parent"
		 android:layout_height="wrap_content"				
		></ListView>
		
</AbsoluteLayout>

<include
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    layout="@layout/tab_bar_layout" />

</LinearLayout>
